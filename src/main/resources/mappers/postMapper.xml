<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.Bhealthy.post.mapper.PostMapperr">
	<select id="selectPostListBySort">
		SELECT
			*
		FROM
			`post`
		<choose>
			<when test="sort == 1">
				ORDER BY `id` ASC;
			</when>
			<when test="sort == 2">
				ORDER BY `id` ASC;
			</when>
			<otherwise>
				ORDER BY `id` ASC;
			</otherwise>
		</choose>
			
	</select>


</mapper>